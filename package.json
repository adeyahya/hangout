{
  "name": "@adeyahya/bun-vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "watch": "PORT=3001 bun run --watch src/server/server.ts",
    "client-watch": "bunx --bun vite --port 3000",
    "dev": "bun-tasks watch ::: client-watch",
    "format": "eslint . --fix",
    "format:check": "eslint .",
    "hooks": "simple-git-hooks",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@effect/platform": "^0.93.3",
    "@hono/zod-validator": "^0.7.4",
    "effect": "^3.19.3",
    "hono": "^4.10.5",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.6",
    "simple-git-hooks": "^2.11.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.9",
    "@tanstack/react-router": "^1.136.1",
    "@tanstack/react-virtual": "^3.13.12",
    "@tanstack/router-plugin": "^1.136.1",
    "@types/bun": "^1.3.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.0",
    "bun-tasks": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vaul": "^1.1.2",
    "vite": "npm:rolldown-vite@7.2.2",
    "vite-plugin-pwa": "^0.21.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bunx --bun lint-staged"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.2"
  }
}
